<h2 class='text-3xl text-gray-800'>Message board</h2>

<div class='my-10'>
  {{#if messages}}
    {{#each messages}}
      <div class='my-6 border border-gray-700 rounded-xl text-gray-800 p-8'>
        <h2 class='text-2xl mb-6'>
          {{this.title}}
        </h2>
        <p>{{this.content}}</p>
      </div>
    {{/each}}
  {{else}}
    <h2 class='text-xl mb-8 text-red-500'>
      No messages
    </h2>
  {{/if}}
</div>