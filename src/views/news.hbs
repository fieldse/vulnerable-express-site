<h2 class='text-3xl text-gray-800'>News and announcements</h2>

<div class='my-10'>

  {{#if news}}
    <p class='text-xl'>Recent news:</p>
    {{#each news}}
      <div class='my-6 border border-gray-700 rounded-xl text-gray-800 p-8'>
        <h2 class='text-2xl mb-6'>
          {{this.title}}
        </h2>
        <p>{{this.content}}</p>
      </div>
    {{/each}}
  {{else}}
    <h2 class='text-xl mb-8'>
      No recent news
    </h2>
  {{/if}}

</div>