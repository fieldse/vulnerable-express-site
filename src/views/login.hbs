<div
  class='my-auto mx-auto sm:w-full md:w-2/3 lg:w-1/2 text-center h-3/4 flex flex-col justify-start'
>

  <form
    action='/login'
    method='POST'
    class='sm:mt-0 lg:mt-24 p-12 bg-gray-400 text-white flex flex-col gap-6 rounded-2xl'
  >

    {{#if isLoggedIn}}

      <!-- Logout button -->
      <h3 class='text-3xl font-extrabold mb-10 mt-4'>You are logged in</h3>
      <div>
        <a href='/logout'>
          <button
            class='px-6 py-2 rounded-md border bg-gray-700 text-white hover:bg-gray-900 hover:border-gray-700'
            type='button'
          >Logout
          </button>
        </a>
      </div>

    {{else}}
      <!-- Login form -->
      <h3 class='text-2xl font-extrabold mb-10 mt-4'>Employee login</h3>
      <div class='mt-8 flex flex-row justify-start items-center'>
        <label class='w-20 mr-6 grow-0' for='input-email'>Email</label>
        <input
          id='input-email'
          class='grow py-1 px-4 rounded-md'
          type='email'
          name='email'
          placeholder='your-email@mail.example.com'
        />
      </div>
      <div class='flex flex-row justify-start items-center'>
        <label class='w-20 mr-6 grow-0' for='input-password'>Password</label>
        <input
          id='input-password'
          class='grow py-1 px-4 rounded-md'
          type='password'
          name='password'
        />
      </div>

      <div class='mt-8 flex flex-row justify-end'>
        <button
          class='px-6 py-2 rounded-md border bg-gray-700 text-white hover:bg-gray-900 hover:border-gray-700'
          type='submit'
        >Login</button>
      </div>
    {{/if}}

  </form>
</div>